#! /bin/bash

# Enter a container of a service
# Docker related
# Only work on manager nodes

if [ $# -lt 1 ]; then
	echo 'Execute command (default bash) of a service task.'
	echo "Usage: $0 [options] taskId [command]"
	echo "	For now, options only support -d, run commmand in detach mode."
	echo "Tips: If the service name is redis, which has 3 replicas, the taskId should be redis.1, redis.2 and redis.3 accordingly."
	exit 1
fi

# detach mode ?
detach=0
if [ "$1" == "-d" ]; then 
	detach=1
fi

copyName=$1
if [ $detach -gt 0 ]; then
	copyName=$2
fi

nodeName=$(docker service ps ${copyName:0:-2} | grep $copyName | head -1 | awk '{print $4}')
nodeAddr=$(grep ${nodeName} /etc/hosts | cut -f1)
echo $nodeAddr
containerId=$( docker -H ${nodeAddr}:2375 ps | grep ${copyName} | head -1 | awk '{print $1}' )
echo $containerId
comm=/bin/bash
if [ $detach -eq 0 ]; then
if [ $# -gt 1 ]; then
	tmp=("$@")
	num=$(expr $# - 1 )
	comm=${tmp[@]:1:$num}
fi
docker -H ${nodeAddr}:2375 exec -it ${containerId} ${comm:-/bin/bash}
else
if [ $# -gt 2 ]; then
	tmp=("$@")
	num=$(expr $# - 1 )
	comm=${tmp[@]:2:$num}
fi
docker -H ${nodeAddr}:2375 exec -d ${containerId} ${comm:-/bin/bash}
fi

